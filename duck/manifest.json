{
  "manifest_version": 3,
  "name": "AI to Duck Replacer",
  "version": "2.0",
  "description": "Replaces 'AI' and 'Artificial Intelligence' with a duck emoji ðŸ¦†. Click to toggle on/off.",
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "permissions": [
    "storage",
    "notifications",
    "activeTab"
  ],
  
  "action": {
    "default_title": "AI to Duck Replacer - Click to toggle",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
